{
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "es6",
		"declaration": true,
		"outDir": "dist",
		"module": "CommonJS",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"strict": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"plugins": [
			{
				"transform": "typescript-transform-paths"
			},
			{
				"transform": "typescript-transform-paths",
				"afterDeclarations": true
			}
		]
	}
}
